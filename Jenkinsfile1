pipeline{
    agent any
  

    //  tools{
    //     nodejs 'node16'
    // }

    environment{
         SCANNER_HOME = tool 'sonarqube'
    }

    stages {
        stage('clean workspace'){
            steps{
                cleanWs()
            }
        }

        stage("Sonarqube Analysis "){
            steps{
                withSonarQubeEnv('sonar-server') {
                    sh ''' $SCANNER_HOME/bin/sonarqube -Dsonar.projectName=myntra-clone \
                    -Dsonar.projectKey=myntra-clone '''
                }
            }
        }
    }

}